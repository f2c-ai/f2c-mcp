{
  "outputRules": {
    "defaultOutputPath": ".demo",
    "fileTypes": {
      "html": {
        "path": ".demo",
        "extension": ".html"
      },
      "css": {
        "path": ".demo",
        "extension": ".css"
      },
      "assets": {
        "path": ".demo",
        "allowedTypes": ["png", "jpg", "svg", "gif"]
      }
    },
    "rules": {
      "createDirectory": true,
      "overwrite": true,
      "separateStyles": true,
      "assetHandling": "copy",
      "naming": {
        "pattern": "${filename}-${timestamp}",
        "lowercase": true
      }
    }
  }
}
